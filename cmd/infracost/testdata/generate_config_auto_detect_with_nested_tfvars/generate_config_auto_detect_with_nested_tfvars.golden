version: 0.1

projects:
  - path: app1
    name: app1-env/prod
    terraform_var_files:
      - defaults.tfvars
      - env/prod.tfvars
    terraform_workspace: default
  - path: app1
    name: app1-env/test
    terraform_var_files:
      - defaults.tfvars
      - env/test.tfvars
    terraform_workspace: default
  - path: app1/app3
    name: app1-app3
    terraform_var_files:
      - qa.tfvars
    terraform_workspace: default
  - path: app2
    name: app2-env/prod
    terraform_var_files:
      - env/defaults.tfvars
      - env/prod.tfvars
    terraform_workspace: default
  - path: app2
    name: app2-env/staging
    terraform_var_files:
      - env/defaults.tfvars
      - env/staging.tfvars
    terraform_workspace: default

