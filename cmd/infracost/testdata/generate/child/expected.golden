    terraform_var_files:
      - envs/default.tfvars
      - envs/dev.tfvars
    skip_auto_detection: true
  - path: apps/bar
    name: apps-bar-prod
    terraform_var_files:
      - envs/default.tfvars
      - envs/prod.tfvars
    skip_auto_detection: true
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - envs/default.tfvars
      - envs/dev.tfvars
    skip_auto_detection: true
  - path: apps/foo
    name: apps-foo-staging
    terraform_var_files:
      - envs/default.tfvars
      - envs/staging.tfvars
    skip_auto_detection: true

