version: 0.1

projects:
  - path: apps
    name: apps-dev
    terraform_var_files:
      - ../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/**
      - envs/dev.tfvars
  - path: apps
    name: apps-prod
    terraform_var_files:
      - ../envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/**
      - envs/prod.tfvars
  - path: apps/bar
    name: apps-bar-dev
    terraform_var_files:
      - ../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/envs/dev.tfvars
  - path: apps/bar
    name: apps-bar-staging
    terraform_var_files:
      - ../envs/staging.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/envs/staging.tfvars
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - ../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/envs/dev.tfvars
      - apps/foo/**
  - path: apps/foo
    name: apps-foo-staging
    terraform_var_files:
      - ../envs/staging.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/envs/staging.tfvars
      - apps/foo/**

