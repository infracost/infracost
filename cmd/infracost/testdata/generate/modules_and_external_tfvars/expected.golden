version: 0.1

projects:
  - path: db/dev
    name: db-dev-dev
    terraform_var_files:
      - ../../default.tfvars
      - ../../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../../default.tfvars
      - ../../envs/dev.tfvars
      - db/dev/**
      - db/modules/db_config/**
  - path: db/prod
    name: db-prod-prod
    terraform_var_files:
      - ../../default.tfvars
      - ../../envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../../default.tfvars
      - ../../envs/prod.tfvars
      - db/modules/db_config/**
      - db/prod/**

