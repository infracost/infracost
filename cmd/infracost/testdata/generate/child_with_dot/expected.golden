version: 0.1

projects:
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - envs/default.tfvars
      - envs/dev.eu-west-1.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/foo/**
      - apps/foo/envs/default.tfvars
      - apps/foo/envs/dev.eu-west-1.tfvars
  - path: apps/foo
    name: apps-foo-staging
    terraform_var_files:
      - envs/default.tfvars
      - envs/staging.eu-west-1.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/foo/**
      - apps/foo/envs/default.tfvars
      - apps/foo/envs/staging.eu-west-1.tfvars

