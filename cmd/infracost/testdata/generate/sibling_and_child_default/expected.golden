version: 0.1

projects:
  - path: apps
    name: apps-dev
    terraform_var_files:
      - envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/**
      - apps/envs/dev.tfvars
  - path: apps
    name: apps-prod
    terraform_var_files:
      - envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/**
      - apps/envs/prod.tfvars
  - path: apps/bar
    name: apps-bar
    skip_autodetect: true
  - path: apps/foo
    name: apps-foo
    skip_autodetect: true

