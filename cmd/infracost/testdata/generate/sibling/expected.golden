version: 0.1

projects:
  - path: apps/bar
    name: apps-bar-dev
    terraform_var_files:
      - ../envs/shared.tfvars
      - ../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../envs/dev.tfvars
      - ../envs/shared.tfvars
      - apps/bar/**
  - path: apps/bar
    name: apps-bar-prod
    terraform_var_files:
      - ../envs/shared.tfvars
      - ../envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../envs/prod.tfvars
      - ../envs/shared.tfvars
      - apps/bar/**
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - ../envs/shared.tfvars
      - ../envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../envs/dev.tfvars
      - ../envs/shared.tfvars
      - apps/foo/**
  - path: apps/foo
    name: apps-foo-prod
    terraform_var_files:
      - ../envs/shared.tfvars
      - ../envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - ../envs/prod.tfvars
      - ../envs/shared.tfvars
      - apps/foo/**

