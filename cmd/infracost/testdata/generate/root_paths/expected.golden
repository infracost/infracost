version: 0.1

projects:
  - path: apps/bar
    name: apps-bar
    terraform_var_files:
      - terraform.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/bar/terraform.tfvars
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - terraform.tfvars
      - dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/foo/**
      - apps/foo/dev.tfvars
      - apps/foo/terraform.tfvars
  - path: apps/foo
    name: apps-foo-prod
    terraform_var_files:
      - terraform.tfvars
      - prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/foo/**
      - apps/foo/prod.tfvars
      - apps/foo/terraform.tfvars

