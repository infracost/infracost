    name: apps-bar-prod
    terraform_var_files:
      - ../default.tfvars
      - ../prod.tfvars
  - path: apps/bat
    name: apps-bat-dev
    terraform_var_files:
      - ../default.tfvars
      - ../dev.tfvars
  - path: apps/bat
    name: apps-bat-prod
    terraform_var_files:
      - ../default.tfvars
      - ../prod.tfvars
  - path: apps/baz
    name: apps-baz-dev
    terraform_var_files:
      - ../default.tfvars
      - ../dev.tfvars
  - path: apps/baz
    name: apps-baz-prod
    terraform_var_files:
      - ../default.tfvars
      - ../prod.tfvars
  - path: apps/foo
    name: apps-foo-dev
