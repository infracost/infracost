version: 0.1

projects:
  - path: apps/bar
    name: apps-bar-dev
    terraform_var_files:
      - ../default.tfvars
      - ../dev-default.tfvars
      - dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/bar/dev.tfvars
      - apps/default.tfvars
      - apps/dev-default.tfvars
  - path: apps/bar
    name: apps-bar-staging
    terraform_var_files:
      - ../default.tfvars
      - ../staging-default.tfvars
      - staging.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/bar/staging.tfvars
      - apps/default.tfvars
      - apps/staging-default.tfvars
  - path: apps/foo
    name: apps-foo-dev
    terraform_var_files:
      - ../default.tfvars
      - ../dev-default.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/default.tfvars
      - apps/dev-default.tfvars
      - apps/foo/**
  - path: apps/foo
    name: apps-foo-prod
    terraform_var_files:
      - ../default.tfvars
      - ../prod-default.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/default.tfvars
      - apps/foo/**
      - apps/prod-default.tfvars
  - path: apps/foo
    name: apps-foo-staging
    terraform_var_files:
      - ../default.tfvars
      - ../staging-default.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/default.tfvars
      - apps/foo/**
      - apps/staging-default.tfvars

