version: 0.1

projects:
  - path: apps/bar
    name: apps-bar-dev
    terraform_var_files:
      - ../envs/default.tfvars
      - envs/dev.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/bar/envs/dev.tfvars
      - apps/envs/default.tfvars
  - path: apps/bar
    name: apps-bar-staging
    terraform_var_files:
      - ../envs/default.tfvars
      - envs/staging.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/**
      - apps/bar/envs/staging.tfvars
      - apps/envs/default.tfvars
  - path: apps/bar/us1
    name: apps-bar-us1-dev
    terraform_var_files:
      - ../../envs/default.tfvars
