    terraform_var_files:
      - ../../envs/default.tfvars
      - envs/prod.tfvars
    skip_autodetect: true
    dependency_paths:
      - apps/bar/us1/**
      - apps/bar/us1/envs/prod.tfvars
      - apps/envs/default.tfvars
  - path: apps/foo
    name: apps-foo-dev
